<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing">
    
	<TextView 
	    android:id="@+id/tv_incoming_phonenumber"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="50dp"
	    android:textColor="#fff"
	    android:textSize="23sp"
	    android:text="15219452946"
	    android:layout_centerHorizontal="true"/>
	<TextView 
	    android:id="@+id/tv_incoming_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="来电..."
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/tv_incoming_phonenumber"
	    android:textColor="#fff"
	    android:textSize="23sp"/>
	<ImageView 
	   android:id="@+id/iv_connect"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content" 
	   android:layout_marginLeft="150dp"
	   android:layout_alignParentBottom="true"
	    android:layout_marginBottom="50dp"
	   android:layout_below="@id/tv_incoming_status"
	   android:src="@drawable/btn_jianpan_bohao_selector"/>
	<ImageView 
	    android:id="@+id/iv_hangup"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="50dp"
	     android:layout_below="@id/tv_incoming_status"
	    android:layout_marginRight="150dp"
	    android:src="@drawable/btn_jianpan_guaduan_selector"/>
</RelativeLayout>